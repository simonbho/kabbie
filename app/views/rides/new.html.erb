<!DOCTYPE html>
<html>
<body>

<%if session[:user_id].present? %>

<h3> Create a new ride.</h3>

  <form action="/rides/create" class="form-horizontal" role="form">

    <div class="form-group">
      <label for="origin" required class="col-sm-2 control-label">Origin</label>
        <div class="col-sm-10">
          <select name="origin">
            <option value="Evanston">Evanston</option>
            <option value="Chicago">Chicago</option>
            <option value="O'Hare">O'Hare</option>
            <option value="Midway">Midway</option>
          </select>
        </div>
      </div>

    <div class="form-group">
      <label for="destination" required class="col-sm-2 control-label">Destination</label>
        <div class="col-sm-10">
          <select name="destination">
            <option value="Evanston">Evanston</option>
            <option value="Chicago">Chicago</option>
            <option value="O'Hare">O'Hare</option>
            <option value="Midway">Midway</option>
          </select>
        </div>
      </div>

    <div class="form-group">
      <label for="date" required class="col-sm-2 control-label">Date</label>
      <div class="col-sm-10">
        <input type="date" class="button" id="date" placeholder="">
      </div>
    </div>

<!-- Departure window reserved for 2nd release -->
<!--     <div class="form-group">
      <label for="departure window" class="col-sm-2 control-label">Departure Window</label>
      <div class="col-sm-10">
        <input type="time" class="button" id="depart_time_1" placeholder="">
        <input type="time" class="button" id="depart_time_2" placeholder="">
      </div>
    </div> -->

    <div class="form-group">
      <label for="depart_time_1" required class="col-sm-2 control-label">Departure By</label>
        <div class="col-sm-10">
          <select id="depart_time_2">
            <option value="0">Midnight</option>
            <option value="1">1:00 am</option>
            <option value="2">2:00 am</option>
            <option value="3">3:00 am</option>
            <option value="4">4:00 am</option>
            <option value="5">5:00 am</option>
            <option value="6">6:00 am</option>
            <option value="7">7:00 am</option>
            <option value="8">8:00 am</option>
            <option value="9">9:00 am</option>
            <option value="10">10:00 am</option>
            <option value="11">11:00 am</option>
            <option value="12">Noon</option>
            <option value="13">1:00 pm</option>
            <option value="14">2:00 pm</option>
            <option value="15">3:00 pm</option>
            <option value="16">4:00 pm</option>
            <option value="17">5:00 pm</option>
            <option value="18">6:00 pm</option>
            <option value="19">7:00 pm</option>
            <option value="20">8:00 pm</option>
            <option value="21">9:00 pm</option>
            <option value="22">10:00 pm</option>
            <option value="23">11:00 pm</option>
          </select>
        </div>
      </div>

    <div class="form-group">
    <label class="col-sm-2"></label>
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Create Ride</button>
      </div>
    </div>

  </form>

<%else%>
Please sign in to create a new ride.
<%end%>

</body>
</html>

