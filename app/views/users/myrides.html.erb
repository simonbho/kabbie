<!DOCTYPE html>
<html>

<% user = User.find_by(:id => session[:user_id]) %>

<h3> Showing all rides for <%= user.first_name %></h3>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>From</th>
            <th>To</th>
            <th>Departure By</th>
        </tr>
    </thead>
    <tbody>

    <% @myrides.each do |ride|%>
        <tr>
            <td><%=ride.depart_date%></td>
            <td><%=ride.origin%></td>
            <td><%=ride.destination%></td>
            <td><%=ride.depart_time_2%></td>
            <td> <button>Delete Ride</button> </td>
        </tr>
    <%end%>

    </tbody>
</table>

</html>
